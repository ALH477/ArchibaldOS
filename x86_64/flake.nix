                    elif choice == "2":
                        key = input("Enter keybinding (e.g., SUPER SHIFT,T): ")
                        command = input("Enter command to bind: ")
                        add_keybinding(key, command)
                    else:
                        print("Invalid choice")

                if __name__ == "__main__":
                    main()
              '';
